<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>



<BorderPane prefHeight="400.0" prefWidth="520.0"
	xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="application.loginController">
	<center>
		<BorderPane prefHeight="400.0" prefWidth="520.0"
			BorderPane.alignment="CENTER" />
	</center>
	<left>
		<AnchorPane prefHeight="407.0" prefWidth="228.0"
			style="-fx-background-color: #FFE4C4;" BorderPane.alignment="CENTER">
			<children>
				<ImageView fx:id="carImageView" fitHeight="228.0"
					fitWidth="236.0" layoutY="86.0" pickOnBounds="true"
					preserveRatio="true">
					<image>
						<Image url="@../../images/car.png" />
					</image>
				</ImageView>
				<Label graphicTextGap="0.0" layoutX="4.0" layoutY="222.0"
					prefHeight="46.0" prefWidth="224.0"
					text="Учёт пассажирских перевозок" textAlignment="CENTER"
					textFill="TOMATO" visible="false">
					<font>
						<Font name="Cambria Bold" size="15.0" />
					</font>
					<opaqueInsets>
						<Insets />
					</opaqueInsets>
					<cursor>
						<Cursor fx:constant="DEFAULT" />
					</cursor>
				</Label>
				<Label layoutY="-16.0" prefHeight="46.0" prefWidth="203.0"
					text="ВАРИАНТ №1" textFill="TOMATO" visible="false">
					<font>
						<Font name="Calibri Bold" size="15.0" />
					</font>
				</Label>
			</children>
		</AnchorPane>
	</left>
	<right>
		<AnchorPane prefHeight="400.0" prefWidth="332.0"
			style="-fx-background-color: #ECECE7;" BorderPane.alignment="CENTER">
			<children>
				<ImageView fx:id="lockImageView" fitHeight="80.0"
					fitWidth="65.0" layoutX="142.0" layoutY="28.0" pickOnBounds="true"
					preserveRatio="true">
					<image>
						<Image url="@../../images/lock.png" />
					</image>
				</ImageView>
				<Label layoutX="30.0" layoutY="96.0" text="Username">
					<font>
						<Font size="15.0" />
					</font>
				</Label>
				<TextField fx:id="usernameTextField" layoutX="101.0"
					layoutY="93.0" prefHeight="26.0" prefWidth="173.0"
					promptText="Username" />
				<Label layoutX="32.0" layoutY="149.0" text="Password">
					<font>
						<Font size="15.0" />
					</font>
				</Label>
				<Button fx:id="loginButton" layoutX="29.0" layoutY="241.0"
					mnemonicParsing="false" onAction="#loginButton_click"
					prefHeight="32.0" prefWidth="266.0"
					style="-fx-background-color: #ff6347;" text="Login">
					<font>
						<Font name="Century" size="18.0" />
					</font>
				</Button>
				<Button fx:id="cancelButton" layoutX="29.0" layoutY="341.0"
					mnemonicParsing="false" onAction="#cancelButton_click"
					prefHeight="35.0" prefWidth="95.0"
					style="-fx-background-color: #ff6347;" text="Cancel">
					<font>
						<Font name="Century" size="18.0" />
					</font>
				</Button>
				<Button fx:id="registerButton" layoutX="29.0" layoutY="290.0"
					mnemonicParsing="false" onAction="#registerButton_click"
					prefHeight="32.0" prefWidth="266.0"
					style="-fx-background-color: #ff6347;" text="Register">
					<font>
						<Font name="Century" size="18.0" />
					</font>
				</Button>
				<Label fx:id="loginMessageLabel" layoutX="29.0"
					layoutY="190.0" prefHeight="32.0" prefWidth="290.0" text="Exp\"
					textFill="RED">
					<font>
						<Font size="15.0" />
					</font>
				</Label>
				<PasswordField fx:id="enterPasswordField"
					layoutX="101.0" layoutY="147.0" prefHeight="26.0" prefWidth="173.0"
					promptText="Password" />
			</children>
		</AnchorPane>
	</right>
</BorderPane>
